<div class="container-fluid">
    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-lg-6 col-md-6">
            <div class="card bg-gradient-primary text-white border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="mb-1"><%= stats.totalInterventions %></h2>
                            <p class="mb-0 opacity-75">Total Interventions</p>
                        </div>
                        <div class="bg-white bg-opacity-20 rounded-circle p-3">
                            <i class="fas fa-tools fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-6">
            <div class="card bg-gradient-warning text-white border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="mb-1"><%= stats.interventionsEnAttente %></h2>
                            <p class="mb-0 opacity-75">En Attente</p>
                        </div>
                        <div class="bg-white bg-opacity-20 rounded-circle p-3">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-6">
            <div class="card bg-gradient-info text-white border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="mb-1"><%= stats.interventionsEnCours %></h2>
                            <p class="mb-0 opacity-75">En Cours</p>
                        </div>
                        <div class="bg-white bg-opacity-20 rounded-circle p-3">
                            <i class="fas fa-cog fa-2x fa-spin"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-6">
            <div class="card bg-gradient-success text-white border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="mb-1"><%= stats.totalTechniciens %></h2>
                            <p class="mb-0 opacity-75">Techniciens Actifs</p>
                        </div>
                        <div class="bg-white bg-opacity-20 rounded-circle p-3">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Interventions -->
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0"><i class="fas fa-list-alt me-2 text-primary"></i>Interventions Récentes</h5>
            <a href="/admin/interventions/nouvelle" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Nouvelle Intervention
            </a>
        </div>
        <div class="card-body p-0">
            <% if (interventions.length === 0) { %>
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted fs-5">Aucune intervention enregistrée.</p>
                    <a href="/admin/interventions/nouvelle" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Créer la première intervention
                    </a>
                </div>
            <% } else { %>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 80px;">ID</th>
                                <th>Titre</th>
                                <th style="width: 150px;">Client</th>
                                <th style="width: 150px;">Technicien</th>
                                <th style="width: 120px;">Statut</th>
                                <th style="width: 100px;">Priorité</th>
                                <th style="width: 120px;">Date</th>
                                <th style="width: 100px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% interventions.forEach(intervention => { %>
                                <tr>
                                    <td><span class="badge bg-secondary">#<%= intervention.id %></span></td>
                                    <td>
                                        <strong><%= intervention.titre %></strong>
                                        <% if (intervention.description) { %>
                                            <br><small class="text-muted"><%= intervention.description.substring(0, 50) %>...</small>
                                        <% } %>
                                    </td>
                                    <td><%= intervention.client ? intervention.client.nom : '<span class="text-muted">N/A</span>' %></td>
                                    <td>
                                        <% if (intervention.technicien) { %>
                                            <span class="badge bg-light text-dark"><%= intervention.technicien.nom %></span>
                                        <% } else { %>
                                            <span class="badge bg-warning">Non assigné</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% let statusClass = intervention.status === 'en_attente' ? 'warning' : 
                                                        intervention.status === 'en_cours' ? 'info' : 
                                                        intervention.status === 'terminee' ? 'success' : 'secondary' %>
                                        <span class="badge bg-<%= statusClass %>">
                                            <%= intervention.status.replace('_', ' ').toUpperCase() %>
                                        </span>
                                    </td>
                                    <td>
                                        <% let priorityClass = intervention.priorite === 'urgente' ? 'danger' : 
                                                            intervention.priorite === 'haute' ? 'warning' : 
                                                            intervention.priorite === 'normale' ? 'info' : 'secondary' %>
                                        <span class="badge bg-<%= priorityClass %>">
                                            <%= intervention.priorite.toUpperCase() %>
                                        </span>
                                    </td>
                                    <td><%= new Date(intervention.createdAt).toLocaleDateString('fr-FR') %></td>
                                    <td>
                                        <a href="/admin/interventions/<%= intervention.id %>" class="btn btn-sm btn-outline-primary" title="Voir détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
.bg-gradient-primary {
    background: linear-gradient(45deg, #007bff, #0056b3);
}
.bg-gradient-warning {
    background: linear-gradient(45deg, #ffc107, #e0a800);
}
.bg-gradient-info {
    background: linear-gradient(45deg, #17a2b8, #138496);
}
.bg-gradient-success {
    background: linear-gradient(45deg, #28a745, #1e7e34);
}
</style>
