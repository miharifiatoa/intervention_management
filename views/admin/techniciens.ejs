<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3><i class="fas fa-users me-2"></i>Gestion des Techniciens</h3>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newTechnicienModal">
            <i class="fas fa-plus me-1"></i> Nouveau Technicien
        </button>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 80px;">ID</th>
                            <th>Nom</th>
                            <th style="width: 200px;">Email</th>
                            <th style="width: 100px;">Statut</th>
                            <th style="width: 150px;">Interventions</th>
                            <th style="width: 120px;">Date création</th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% techniciens.forEach(technicien => { %>
                            <tr>
                                <td><span class="badge bg-secondary">#<%= technicien.id %></span></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-2">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <strong><%= technicien.nom %></strong>
                                    </div>
                                </td>
                                <td><%= technicien.email %></td>
                                <td>
                                    <% if (technicien.actif) { %>
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>Actif
                                        </span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-pause-circle me-1"></i>Inactif
                                        </span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-info me-2">
                                            <%= technicien.interventions ? technicien.interventions.length : 0 %>
                                        </span>
                                        <small class="text-muted">interventions</small>
                                    </div>
                                </td>
                                <td><%= new Date(technicien.createdAt).toLocaleDateString('fr-FR') %></td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-info" title="Voir détails">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-outline-warning" data-bs-toggle="modal" 
                                                data-bs-target="#editTechnicienModal<%= technicien.id %>" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <% if (technicien.actif) { %>
                                            <button class="btn btn-outline-danger" onclick="toggleTechnicienStatus('<%= technicien.id %>', false)" title="Désactiver">
                                                <i class="fas fa-ban"></i>
                                            </button>
                                        <% } else { %>
                                            <button class="btn btn-outline-success" onclick="toggleTechnicienStatus('<%= technicien.id %>', true)" title="Activer">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Nouveau Technicien -->
<div class="modal fade" id="newTechnicienModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-user-plus me-2"></i>Nouveau Technicien
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="/admin/techniciens">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="nom" class="form-label">Nom complet *</label>
                        <input type="text" class="form-control" id="nom" name="nom" required 
                               placeholder="Nom et prénom du technicien">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email *</label>
                        <input type="email" class="form-control" id="email" name="email" required
                               placeholder="adresse@email.com">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Mot de passe *</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="password" name="password" required
                                   placeholder="Mot de passe sécurisé">
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility()">
                                <i class="fas fa-eye" id="passwordToggleIcon"></i>
                            </button>
                        </div>
                        <small class="text-muted">Minimum 6 caractères</small>
                    </div>
                    <div class="mb-3">
                        <label for="telephone" class="form-label">Téléphone</label>
                        <input type="tel" class="form-control" id="telephone" name="telephone"
                               placeholder="+261 xx xxx xx xx">
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="actif" name="actif" checked>
                            <label class="form-check-label" for="actif">
                                Technicien actif
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Annuler
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Créer le technicien
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modales d'édition -->
<% techniciens.forEach(technicien => { %>
    <div class="modal fade" id="editTechnicienModal<%= technicien.id %>" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-edit me-2"></i>Modifier - <%= technicien.nom %>
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/admin/techniciens/<%= technicien.id %>">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="nom_edit_<%= technicien.id %>" class="form-label">Nom complet *</label>
                            <input type="text" class="form-control" id="nom_edit_<%= technicien.id %>" 
                                   name="nom" value="<%= technicien.nom %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="email_edit_<%= technicien.id %>" class="form-label">Email *</label>
                            <input type="email" class="form-control" id="email_edit_<%= technicien.id %>" 
                                   name="email" value="<%= technicien.email %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="telephone_edit_<%= technicien.id %>" class="form-label">Téléphone</label>
                            <input type="tel" class="form-control" id="telephone_edit_<%= technicien.id %>" 
                                   name="telephone" value="<%= technicien.telephone || '' %>">
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="actif_edit_<%= technicien.id %>" 
                                       name="actif" <%= technicien.actif ? 'checked' : '' %>>
                                <label class="form-check-label" for="actif_edit_<%= technicien.id %>">
                                    Technicien actif
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-1"></i>Annuler
                        </button>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i>Sauvegarder
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<% }) %>

<script>
function togglePasswordVisibility() {
    const passwordField = document.getElementById('password');
    const toggleIcon = document.getElementById('passwordToggleIcon');
    
    if (passwordField.type === 'password') {
        passwordField.type = 'text';
        toggleIcon.className = 'fas fa-eye-slash';
    } else {
        passwordField.type = 'password';
        toggleIcon.className = 'fas fa-eye';
    }
}

function toggleTechnicienStatus(technicienId, newStatus) {
    const action = newStatus ? 'activer' : 'désactiver';
    if (confirm(`Êtes-vous sûr de vouloir ${action} ce technicien ?`)) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/admin/techniciens/${technicienId}/toggle-status`;
        
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'actif';
        input.value = newStatus;
        form.appendChild(input);
        
        document.body.appendChild(form);
        form.submit();
    }
}

// Reset form when modal is hidden
document.getElementById('newTechnicienModal').addEventListener('hidden.bs.modal', function () {
    document.querySelector('#newTechnicienModal form').reset();
    document.getElementById('password').type = 'password';
    document.getElementById('passwordToggleIcon').className = 'fas fa-eye';
});
</script>

